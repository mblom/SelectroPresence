<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.selectro.presence.selectropresence.ApiActivity">

    <EditText
        android:id="@+id/et_pincode"
        android:layout_width="240dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:digits="0123456789"
        android:ems="10"
        android:imeOptions="actionSend"
        android:inputType="numberSigned"
        android:hint="pincode"
        app:layout_constraintStart_toEndOf="@+id/imgPicture"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        tools:text="" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="240dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:hint="username"
        app:layout_constraintStart_toEndOf="@+id/imgPicture"
        app:layout_constraintTop_toTopOf="parent" />
        tools:text="111" />

    <Button
        android:id="@+id/btn_get_repos"
        android:layout_width="118dp"
        android:layout_height="69dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="verzenden"
        app:layout_constraintStart_toEndOf="@+id/et_pincode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_repo_list"
        android:layout_width="376dp"
        android:layout_height="149dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPicture" />

    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="286dp"
        android:layout_height="274dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/darker_gray" />


</android.support.constraint.ConstraintLayout>


